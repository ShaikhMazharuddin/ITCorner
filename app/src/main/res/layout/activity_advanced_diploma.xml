<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/xyz">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img1"
        android:scaleType="fitXY"
        android:src="@drawable/advanced_diploma"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_below="@+id/img1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="ADVANCED DIPLOMA IN JAVA TECHNOLOGIES" />

        <Button
            android:layout_width="170dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btn"
            android:layout_height="90dp"
            android:id="@+id/btn1"
            android:layout_below="@+id/img1"
            android:layout_marginTop="10dp"
            android:text="ADVANCED DIPLOMA IN .NET TECHNOLOGIES"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:id="@+id/btn2"
            android:text="ADVANCED DIPLOMA IN OPEN SOURCE TECHNOLOGIES"
            android:layout_below="@+id/btn"
            android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>


</LinearLayout>
